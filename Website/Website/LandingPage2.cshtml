    <script type="text/javascript">

        var locations = [
            ['Antelope Canyon', 36.861910, -111.374330, 10],
            ['National Park Grand Canyon', 36.115161, -112.115688, 9],
            ['Hollywood', 34.092889, -118.325963, 8],
