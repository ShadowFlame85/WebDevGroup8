                ['Calico Ghost Town', 34.943572, -116.865911, 4, '../Comments tester.cshtml'],
                ['Joshua Tree', 33.7883944, -115.8982222, 3, '../Comments tester.cshtml'],
                ['Sequoia National Park', 36.486366, -118.565750, 2, '../Comments tester.cshtml'],
                ['Yosemite National Park', 37.865101, -119.538330, 1, '../Comments tester.cshtml']
            ];

            var map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 34.008778, lng: -118.206061 },
                zoom: 5.5
            });

            var infowindow = new google.maps.InfoWindow();

            var marker, i;

            for (i = 0; i < locations.length; i++) {
                marker = new google.maps.Marker({
                    position: new google.maps.LatLng(locations[i][1], locations[i][2]),
                    map: map,
                    
                    url: locations[i][4]
                });

                google.maps.event.addListener(marker, 'click', (function (marker, i) {
                    return function () {
                        infowindow.setContent(locations[i][0]);
                        infowindow.open(map, marker);
                        window.location.href = this.url;
                    }
                })(marker, i));
            }

        </script>
