    <script type="text/javascript">

        var locations = [
            ['Antelope Canyon', 36.861910, -111.374330, 10],
            ['National Park Grand Canyon', 36.115161, -112.115688, 9],
            ['Hollywood', 34.092889, -118.325963, 8],
            ['Los Angeles', 34.052235, -118.243683, 7],
            ['San Francisco', 37.733795, -122.446747, 6],
            ['Organ Pipe Cactus National Monument', 32.038374, -112.939584],
            ['Calico Ghost Town', 34.943572, -116.865911, 4],
            ['Joshua Tree', 33.7883944, -115.8982222, 3],
            ['Sequoia National Park', 36.486366, -118.565750, 2],
            ['Yosemite National Park', 37.865101, -119.538330, 1]
        ];

        var map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: 34.008778, lng: -118.206061 },
            zoom: 5.5
        });

        var infowindow = new google.maps.InfoWindow();

        var marker, i;

        for (i = 0; i < locations.length; i++) {
            marker = new google.maps.Marker({
                position: new google.maps.LatLng(locations[i][1], locations[i][2]),
                map: map
            });

            google.maps.event.addListener(marker, 'click', (function (marker, i) {
                return function () {
                    infowindow.setContent(locations[i][0]);
                    infowindow.open(map, marker);
                }
            })(marker, i));
        }

    </script>
